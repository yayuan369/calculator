/**index.wxss**/

.content {
  height: 100%;
  display: flex;
  background-color: #ccc;
  flex-direction: column;
  align-items: center;
  font-family: "Microsoft YaHei";
}

.head_top {
  width: 100%;
  margin-bottom: 30rpx;
}

.head_top .screen {
  width: 100%;
  line-height: 130px;
  padding: 0 10rpx;
  font-weight: bold;
  font-size: 50px;
  box-sizing: border-box;
  text-align: right;
  border-top: 1px solid #fff;
}

.cont_bottom {
  width: 100%;
}

.cont_bottom .btnGroup {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 5.3rem;
  background-color: #ccc;
}

.btnGroup .item {
  width: 25%;
  font-size: 28px;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  margin-top: 1px;
  margin-right: 1px;
}
.btnGroup .item:active {
    background-color: #dad8d8;
}

.btnGroup .gray {
    color: #1919CE;
    background: #ece9e6;
    font-weight: bold;
}
.btnGroup .white {
    color:#333;
    background-color: #fff;
}
.btnGroup .iconBtn{
    display: flex;
}
.btnGroup .iconBtn .icon{
   display: flex;
   align-items: center;
   width:100%;
   justify-content: center;
}